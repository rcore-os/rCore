    -L ${OUTDIR} \
    --extern semver=${OUTDIR}/libsemver.rlib \
    --cap-lints allow
gen_full_rlib
fi

CNAME=bare_metal
# omit build_script_build
if ! [[ -f ${OUTDIR}/${CNAME}.o ]]
then
rustc --crate-name bare_metal $CARGO_PATH/registry/src/github.com-1ecc6299db9ec823/bare-metal-0.2.4/src/lib.rs \
